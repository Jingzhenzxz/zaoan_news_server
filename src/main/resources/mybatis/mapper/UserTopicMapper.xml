<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wuan.wuan_news.wuan_news_server.mapper.UserTopicMapper">
    <insert id="insertUserTopic">
        INSERT INTO user_topic (user_id, topic_id)
        VALUES (#{userId}, #{topicId})
    </insert>

    <delete id="deleteUserTopic">
        DELETE FROM user_topic WHERE user_id = #{userId} AND topic_id = #{topicId}
    </delete>

    <select id="getTopicIdsByUserId" resultType="java.lang.Long">
        SELECT topic_id FROM user_topic WHERE user_id = #{userId}
    </select>

    <select id="getUserIdsByTopicId" resultType="java.lang.Long">
        SELECT user_id FROM user_topic WHERE topic_id = #{topicId}
    </select>
</mapper>